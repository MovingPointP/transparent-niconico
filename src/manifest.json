{
    "name": "Nico-gradaton",
    "version": "1.0.0",
    "manifest_version": 3,
    "description": "ニコニコ動画のコメントを薄く",
    "icons": {
        "16": "images/get_started16.png",
        "32": "images/get_started32.png",
        "48": "images/get_started48.png",
        "128": "images/get_started128.png"
    },
    "content_scripts": [
        {
            "matches": [
                "https://www.nicovideo.jp/watch/*"
            ],
            "js": [
                "jquery-3.6.0.js",
                "content.js"
            ]
        }
    ]
}